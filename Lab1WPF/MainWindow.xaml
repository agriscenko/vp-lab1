<Window x:Name="Students" x:Class="Lab1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1WPF"
        mc:Ignorable="d"
        Title="Studenti" Height="390" Width="300">
    <Grid>
        <Label x:Name="lblName" Content="Vārds:" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="60,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <Label x:Name="lblSurname" Content="Uzvārds:" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="60,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <Label x:Name="lblId" Content="Apl. Nr.:" HorizontalAlignment="Left" Margin="6,67,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="60,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <Label x:Name="lblGroup" Content="Grupa:" HorizontalAlignment="Left" Margin="6,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGroup" HorizontalAlignment="Left" Margin="60,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <Label x:Name="lblEmail" Content="E-pasts:" HorizontalAlignment="Left" Margin="5,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="60,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>

        <Button x:Name="btnAddStudent" Content="Pievienot sarakstam" HorizontalAlignment="Left" Margin="120,156,0,0" VerticalAlignment="Top" Width="120" Click="btnAddStudent_Click"/>

        <Label x:Name="lblStudentList" Content="Studentu saraksts:" HorizontalAlignment="Left" Margin="5,174,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="lstStudents" Margin="5,200,5,0" VerticalAlignment="Top" Height="120" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vārds"
                                    DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Uzvārds"
                                    DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Apl. Nr."
                                    DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Grupa"
                                    DisplayMemberBinding="{Binding Group}"/>
                    <GridViewColumn Header="E-pasts"
                                    DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnSave" Content="Saglabāt" HorizontalAlignment="Left" Margin="5,325,0,0" VerticalAlignment="Top" Width="60" Click="btnSave_Click"/>
        <Button x:Name="btnLoad" Content="Ielādēt" HorizontalAlignment="Left" Margin="70,325,0,0" VerticalAlignment="Top" Width="60" Click="btnLoad_Click"/>
    </Grid>
</Window>
